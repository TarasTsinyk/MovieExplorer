<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:touchscreenBlocksFocus="false"
        android:background="@color/background_material_dark"
        android:fillViewport="false">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <ImageView
                android:layout_width="450dp"
                android:layout_height="200dp"
                android:id="@+id/imageTitle"
                android:focusable="false"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/originalTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nothing found"
                android:id="@+id/originalTitle"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30dp"
                android:textColor="#fffbfdff"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="132dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:gravity="left"
                android:layout_marginLeft="3dp"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/imageTitle"
                android:layout_alignParentStart="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/filmInfoImage"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:maxHeight="200dp"
                    android:maxWidth="100dp"
                    android:layout_gravity="left" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:background="#e1211420"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="inherit"
                        android:gravity="left|center_vertical"
                        android:text="Tagline :"
                        android:textSize="12dp"
                        android:id="@+id/textView3"
                        android:textColor="#fffbfdff"
                        android:layout_marginLeft="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nothing found"
                        android:id="@+id/tagLine"
                        android:textColor="#fffbfdff"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        android:maxHeight="10dp"
                        android:maxWidth="50dp"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:stepSize="0.5"
                        android:numStars="3"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nothing  found"
                        android:id="@+id/filmRating"
                        android:textColor="#fffffc0d"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Overview "
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textSize="20dp"

                android:textColor="#fffbfdff"
                android:background="#e1211420"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignStart="@+id/imageTitle"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Nothing found"
                android:id="@+id/overView"
                android:textColor="#fffbfdff"
                android:background="#e1211420"
                android:longClickable="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/imageTitle"
                android:gravity="center_vertical"
                android:autoText="true" />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
